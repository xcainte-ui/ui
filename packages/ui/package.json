        "@radix-ui/react-checkbox": "^1.0.4",
        "@radix-ui/react-collapsible": "^1.0.3",
        "@radix-ui/react-icons": "^1.3.0"
    },
    "devDependencies": {
        "@repo/eslint-config": "*",
        "@repo/typescript-config": "*",
        "@types/react": "^18.2.38",
        "@types/react-dom": "^18.2.17",
        "eslint": "^8.54.0",
        "react": "^18.2.0",
        "styled-components": "^6.1.1",
        "tsup": "^8.0.1",
        "typescript": "^5.3.2"
    },
    "publishConfig": {
        "access": "public"
    }
