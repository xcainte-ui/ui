        "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
    },
    "dependencies": {
        "@radix-ui/colors": "^3.0.0",
        "@radix-ui/react-accordion": "^1.1.2",
        "@radix-ui/react-aspect-ratio": "^1.0.3",
