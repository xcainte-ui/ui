{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "outputs": [
                "dist/**",
                "storybook-static/**",
                ".next/**",
                "!.next/cache/**"
            ],
            "dependsOn": ["^build"]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        }
    }
}
